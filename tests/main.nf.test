nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    test("main.nf succeeds -- default `nf_test` params") {
        tag 'full'

        when {
            params {
                publishDirReports = "${outputDir}/qc"
            }
        }

        then {
            // test pipeline status
            assert workflow.success
            assert workflow.trace.succeeded().size() == 5

            // test MultiQC report published to reports dir reports dir
            assert path("${params.publishDirReports}/fastqc_multiqc.html").exists()
            assert path("${params.publishDirReports}/fastqc_multiqc_data").exists()
        }

    }

}
